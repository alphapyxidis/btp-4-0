<div class="fos_comment_comment_form_holder">
    <form class="fos_comment_comment_edit_form" action="{{ url('fos_comment_put_thread_comments', {'id': comment.thread.id, 'commentId': comment.id}) }}" method="POST">

        {% block fos_comment_form_fields %}
            {{ form_errors(form) }}
            {{ form_errors(form.body) }}
            {{ form_widget(form.body) }}
            {{ form_rest(form) }}
        {% endblock %}

        <div class="fos_comment_submit">
            <button type="button" class="round error fos_comment_comment_edit_cancel" title="{% trans from 'FOSCommentBundle' %}fos_comment_comment_edit_cancel{% endtrans %}"><i class="icon-cancel"></i></button>
            {% block fos_comment_form_submit %}
                <button type="submit" class="round success" title="{% trans from 'FOSCommentBundle' %}fos_comment_comment_edit_submit{% endtrans %}"><i class="icon-comment-alt"></i></button>
            {% endblock %}
        </div>

    </form>
</div>
