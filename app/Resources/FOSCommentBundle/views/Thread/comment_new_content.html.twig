{% set first = first|default(false) %}

{% set url_parameters = {'id': id } %}
{% if parent is not null %}
    {% set url_parameters = url_parameters|merge({'parentId': parent.id}) %}
{% endif %}

{% block fos_comment_comment_form_holder %}
    <div class="fos_comment_comment_form_holder">

        {% block fos_comment_comment_new_form %}
            {% trans_default_domain 'FOSCommentBundle' %}
            {% if first %}
                {% set message = 'fos_comment_comment_new_headline_first'|trans %}
            {% elseif parent is not null %}
                {% set message = 'fos_comment_comment_reply_reply_to'|trans({'%name%': parent.authorName }) %}
            {% else %}
                {% set message = 'fos_comment_comment_new_headline'|trans %}
            {% endif %}         

            <form class="fos_comment_comment_new_form" action="{{ url('fos_comment_post_thread_comments', url_parameters) }}" data-parent="{{ parent.id|default() }}" method="POST">

                {% block fos_comment_form_fields %}
                    <div class="fos_comment_form_errors">
                    {{ form_errors(form) }}
                    {{ form_errors(form.body) }}
                    </div>

                    {{ form_widget(form.body, {'attr': {'placeholder': message }}) }}
                    
                    {{ form_rest(form) }}
                {% endblock %}

                <div class="fos_comment_submit half-padded">
                    {% block fos_comment_form_submit %}
                        {% if parent is not null %}
                            <button class="round white active fos_comment_comment_reply_cancel" title="{% trans from 'FOSCommentBundle' %}fos_comment_comment_reply_cancel{% endtrans %}"><i class="icon-remove"></i></button>
                            <button class="round white active" type="submit" title="{% trans from 'FOSCommentBundle' %}fos_comment_comment_new_submit{% endtrans %}"><i class="icon-ok"></i></button>
                        {% else %}
                            <button class="round white active" type="submit" title="{% trans from 'FOSCommentBundle' %}fos_comment_comment_new_submit{% endtrans %}"><i class="icon-comment-alt"></i></button>
                        {% endif %}
                    {% endblock %}
                </div>

            </form>
        {% endblock fos_comment_comment_new_form %}

    </div>
{% endblock fos_comment_comment_form_holder %}
