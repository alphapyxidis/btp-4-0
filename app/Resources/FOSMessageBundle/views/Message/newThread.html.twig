{% extends 'FOSMessageBundle::layout.html.twig' %}

{% block fos_message_content %}

<div class="large asphalt-bg half-padded half-gap-bottom">
    <i class="icon-edit gap-right gap-left"></i>{% trans from 'FOSMessageBundle' %}send_new{% endtrans %}
</div>

<form action="{{ url('fos_message_thread_new') }}" method="post">
    {{ form_widget(form) }}
        <div class="gapped">
            <button type="submit" class="pull-left round button success" title="{% trans from 'FOSMessageBundle' %}send_new{% endtrans %}"><i class="icon-mail-forward"></i>&nbsp;{% trans from 'FOSMessageBundle' %}send_new{% endtrans %}</button>
        </div>
</form>

{% endblock %}
