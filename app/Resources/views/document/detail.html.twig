
{% import 'tools.html.twig' as tools %}

{% extends 'demo.html.twig' %}

{% block body %}
<div class="one whole container centered">
    {% if 'image' in document.mimetype %}
        <img class= "one whole centered" src="{{ asset('data/') ~ document.fichier }}"/>
    {% else %}
    <div class="one whole white-bg bordered">
        <div class="row">
            <img class="pull-left pad-right" src="{{ asset('img/file-icons/') ~ tools.file_icon(document.mimeType)|trim }}"/>
            <h4 class="charcoal half-pad-top">{{ document.nom }}</h4>
        </div>            
    </div>
    {% endif %}
    <a class="round button active white absolute top float-left gapped padded" style="z-index:10; opacity: 0.5;" href="{{ path('chantier_show', { 'slug': document.chantier.slug }) }}" title="fermer"><i class="icon-remove"></i></a>
</div>
{% endblock %}
