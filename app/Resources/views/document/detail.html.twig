
{% import 'tools.html.twig' as tools %}

{% extends 'demo.html.twig' %}

{% block body %}
<div class="one whole container centered">
    {% if 'image' in document.mimetype %}
        <img class= "one whole centered" src="{{ asset('data/') ~ document.fichier }}"/>
    {% else %}
    <div class="one whole white-bg bordered">
        <div class="row">
            <img class="pull-left pad-right" src="{{ asset('img/file-icons/') ~ tools.file_icon(document.mimeType)|trim }}"/>
            <h4 class="charcoal half-pad-top">{{ document.nom }}</h4>
        </div>            
    </div>
    {% endif %}
    <div class="absolute top right gapped">
        <a class="round button white active half-gap-right" style="z-index:10; opacity: 0.66;" href="{{ path('document_fullscreen', { 'id': document.id }) }}" title="Plein écran"><i class="icon-fullscreen"></i></a>
        <a class="round button white active" style="z-index:10; opacity: 0.66;" href="{{ path('document_show', { 'id': document.id }) }}" title="Fermer l'aperçu"><i class="icon-remove"></i></a>
    </div>
</div>
{% endblock %}
