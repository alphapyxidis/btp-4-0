        <script src="{{ asset('bundles/pugxautocompleter/js/autocompleter-select2.js') }}"></script>
        {# <script src="{{ asset('bundles/pugxautocompleter/js/autocompleter-jqueryui.js') }}"></script> #}

        <link type="text/css" rel="stylesheet" href="{{ asset('/css/btp-4-0.css') }}">

        {% block headerscripts %}{% endblock %}
    </head>
    <body class="alert-bg">
        <div class="one whole centered">
            {% if 'image' in document.mimetype %}
                <img class= "one whole centered" src="{{ asset('data/') ~ document.fichier }}"/>
            {% else %}
            <div class="one whole white-bg bordered">
                <div class="row">
                    <img class="pull-left pad-right" src="{{ asset('img/file-icons/') ~ tools.file_icon(document.mimeType)|trim }}"/>
                    <h4 class="charcoal half-pad-top">{{ document.nom }}</h4>
                </div>            
            </div>
            {% endif %}
            <div class="absolute top right gapped">
                <a class="round button white active half-gap-right" style="z-index:10; opacity: 0.66;" href="{{ path('document_detail', { 'id': document.id }) }}" title="RÃ©duire"><i class="icon-resize-small"></i></a>
            </div>            
        </div>

        <!-- scripts-->
        <script type="text/javascript" src="{{ asset('/js/groundwork.all.js') }}"></script>
