{% extends 'demo.html.twig' %}

{% block body %}
<div class="one whole container centered">
    {# display navigation #}
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>

    <table class="blue">
        <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, '#', 'd.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Nom', 'd.nom') }}</th>
                <th>Commentaire</th>
                <th>Fichier</th>
                <th>Slug</th>
            </tr>
        </thead>
        <tbody>
        {% for document in pagination %}
            <tr>
                <td><a href="{{ path('document_show', { 'id': document.id }) }}">{{ document.id }}</a></td>
                <td>{{ document.nom }}</td>
                <td>{{ document.commentaire }}</td>
                <td>{{ document.fichier }}</td>
                <td>{{ document.slug }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}
