<!DOCTYPE html>
<html lang="fr" class="no-js">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title>{% block title %}BTP 4.0 - Le chantier du futur{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <!-- Modernizr -->
        <script src="{{ asset('/js/modernizr-2.6.2.min.js') }}"></script>
        <!-- jQuery-->
        <script type="text/javascript" src="{{ asset('/js/jquery-1.10.2.min.js') }}"></script>
        {# <script src="//code.jquery.com/jquery-3.3.1.min.js"></script> #}
        <!-- jQueryUI -->
        <script src="{{ asset('/libs/jquery-ui-1.12.1/jquery-ui.min.js') }}"></script>
        <link href="{{ asset('/libs/jquery-ui-1.12.1/jquery-ui.theme.min.css') }}" rel="stylesheet" />
        <!-- Select2 -->
        <script src="//cdnjs.cloudflare.com/ajax/libs/select2/3.5.4/select2.min.js"></script>
        <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/3.5.4/select2.min.css" rel="stylesheet" />
        <!-- framework css --><!--[if gt IE 9]><!-->
        <link type="text/css" rel="stylesheet" href="{{ asset('/css/groundwork.css') }}"><!--<![endif]--><!--[if lte IE 9]>
        <link type="text/css" rel="stylesheet" href="{{ asset('/css/groundwork-core.css') }}">
        <link type="text/css" rel="stylesheet" href="{{ asset('/css/groundwork-type.css') }}">
        <link type="text/css" rel="stylesheet" href="{{ asset('/css/groundwork-ui.css') }}">
        <link type="text/css" rel="stylesheet" href="{{ asset('/css/groundwork-anim.css') }}">
        <link type="text/css" rel="stylesheet" href="{{ asset('/css/groundwork-ie.css') }}"><![endif]-->
        <!-- bundle for autocomplete-->
        <script src="{{ asset('bundles/pugxautocompleter/js/autocompleter-select2.js') }}"></script>
        {# <script src="{{ asset('bundles/pugxautocompleter/js/autocompleter-jqueryui.js') }}"></script> #}

        <link type="text/css" rel="stylesheet" href="{{ asset('/css/btp-4-0.css') }}">

        {% block headerscripts %}{% endblock %}
    </head>
    <body class="alert-bg">
        <header class="gap-bottom">
          <div class="box square charcoal">
             <div class="desktop-only" >
                    <div class="row">
                        <div class="two fifths skip-one">
                            <a class="align-center" href="{{ url('accueil') }}" target="_parent"><img src="{{ asset('img/header-btp-4-0.png') }}" width="800" alt="BTP 4.0"/></a>
                        </div>
                        <div class="one fifth double-gap-top ">
                            <div class="round white box six tenths skip-four half-padded">
                                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                    <img src="{{ app.user.picture }}"  style = "float: left; margin-right:6px; width:30px; height: 30px; border-radius: 50%;"/>
                                    <div class="dropdown left-pad">
                                        <button class="white" title="compte {{app.user.identityprovider }}">
                                        {% if app.user.nickname|e|length > 15 %}
                                            {{app.user.nickname|e|slice(0, 12)}}...
                                        {% else %}
                                            {{app.user.nickname|e}}
                                            {% if app.user.nickname|e|length < 12 %}
                                                {% for i in 1..(12 - app.user.nickname|e|length) %}
                                                    &nbsp;
                                                {% endfor %}
                                            {% endif %}
                                        {% endif %} 
                                        </button>
                                        <ul>
                                            <li>
                                                <a href="{{ url('fos_user_profile_show') }}"><i class="icon-user"></i>&nbsp;&nbsp;Mon compte</a>
                                            </li>
                                            <li><hr></li>
                                            <li>
                                                <a href="{{ path('auth0_logout') }}"><i class="icon-signout"></i>&nbsp;&nbsp;{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a>
                                            </li>
                                        </ul>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
             </div>
             <div class="ipad-only">
                    <div class="row">
                        <a class="three fifths" href="{{ url('accueil') }}" target="_parent"><img src="{{ asset('img/header-btp-4-0.png') }}" width="100%" alt="BTP 4.0"/></a>
                    </div>
             </div>
             <div class="small-tablet-only">
                    <div class="row">
                        <a class="one whole centered" href="{{ url('accueil') }}" target="_parent"><img src="{{ asset('img/header-btp-4-0.png') }}" width="100%" alt="BTP 4.0"/></a>
                    </div>
             </div>
             <div class="mobile-only">
                    <div class="row">
                        <a class="one whole centered" href="{{ url('accueil') }}" target="_parent"><img src="{{ asset('img/header-btp-4-0.png') }}" width="200%" alt="BTP 4.0"/></a>
                    </div>
             </div>
          </div>
        </header>

        <div class="six eigths centered container charcoal">
            <div class="row padded">
                {{ knp_menu_render('AppBundle:Builder:mainMenu') }}
                {% block navigation %}{% endblock %}        
            </div>
            <div class="row padded">
                <div class="one whole gap-top">
                    {% for message in app.session.flashbag.get('error') %}
                        <div class="eleven twelfths dismissible error round message centered align-left gap-bottom">{{ message }}</div>
                    {% endfor %}
                    {% for message in app.session.flashbag.get('warning') %}
                        <div class="eleven twelfths dismissible warning round message centered align-left gap-bottom">{{ message }}</div>
                    {% endfor %}
                    {% for message in app.session.flashbag.get('success') %}
                        <div class="eleven twelfths dismissible success round message centered align-left gap-bottom">{{ message }}</div>
                    {% endfor %}
                    {% for message in app.session.flashbag.get('info') %}
                        <div class="eleven twelfths dismissible blue round message centered align-left gap-bottom">{{ message }}</div>
                    {% endfor %}
                    {% for message in app.session.flashbag.get('new') %}
                        <div class="eleven twelfths dismissible purple round message centered align-left gap-bottom">{{ message }}</div>
                    {% endfor %}
                    
                    {% block body %}{% endblock %}

                </div>
           </div>
        </div>

        {% block popup %}{% endblock %}
                
        <footer class="gap-top">
            <div class="box square charcoal">
                <div class="container">
                    <div class="equalize row align-center">
                        <div class="two small-tablet sevenths half-padded" title="Suivez nous sur les rÃƒÂ©seaux sociaux !">
                            <a class="icon-2x" href="https://www.linkedin.com/in/vincent-vermorel/" target="_blank" title="Vincent VERMOREL sur LinkedIn" style="text-decoration:none;"  class="inline"></a>
                            <a class="icon-2x" href="http://twitter.com/alphapyxidis" target="_blank" title="@alphapyxidis" style="text-decoration:none;" class=" inline"></a>
                        </div>
                        <div class="three small-tablet sevenths half-padded">
                            <small class="one whole half-padded">
                                <a href="{{ url('presentation') }}" title="Quels enjeux pour le chantier du futur ?">Quels enjeux pour le chantier du futur ?</a><br>
                            </small>
                        </div>
                        <div class="two small-tablet sevenths half-padded" title="Restez en contact avec nous...">
                            <a class="icon-2x" href="mailto:vincent.vermorel@grenoble-em.com" title="vincent.vermorel@grenoble-em.com" style="text-decoration:none;" class=" inline"></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="box square">
                <div class="container half-padded">
                    <div class="row">
                    </div>
                </div>
            </div>
        </footer>

        <!-- scripts-->
        <script type="text/javascript" src="{{ asset('/js/groundwork.all.js') }}"></script>
            <script>
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

            ga('create', '{{ ga_tracking_id }}', 'auto');
            ga('send', 'pageview');        
        </script>
        
        {% block javascripts %}{% endblock %}
    </body>
</html>